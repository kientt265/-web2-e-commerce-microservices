generator client { provider = "prisma-client-js" }

datasource db { provider = "postgresql" url = env("AUTH_DATABASE_URL") }

model users { user_id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid username String @unique @db.VarChar(50) email String @unique @db.VarChar(100) password_hash String @db.VarChar(255) created_at DateTime? @default(now()) @db.Timestamp(6) updated_at DateTime? @default(now()) @db.Timestamp(6) }